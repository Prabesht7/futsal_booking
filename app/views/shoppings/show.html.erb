<p style="color: green;"><%= notice %></p>

<%= render @shopping %>

<div style="display: flex; align-items: center; margin-top: 10px;">
  <%= link_to "Edit this shopping", edit_shopping_path(@shopping), class: "btn btn-primary", style: "margin-right: 10px; background-color: #294B29; padding:10px; color:white;text-decoration:none;" %>
  <%= link_to "Back to shoppings", shoppings_path, class: "btn btn-secondary", style: "margin-right: 10px;background-color: red; padding:10px; color:white;text-decoration:none;" %>
  <%= button_to "Destroy this shopping", @shopping, method: :delete, class: "btn btn-danger", style: "margin-right: 10px;background-color: blue; padding:10px; color:white;text-decoration:none;" %>
</div>
 